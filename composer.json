{
  "name": "valantic/pimcore-elastica-bridge",
  "version": "0.6.2",
  "description": "Elastica bridge for Pimcore",
  "type": "pimcore-bundle",
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "pimcore/pimcore": "^6.7.0 || ^10.0",
    "ruflin/elastica": "^7.1"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4",
    "phpstan/phpstan": "^0.12.64"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Linus Metzler",
      "email": "linus.metzler@cec.valantic.com"
    },
    {
      "name": "Florian VÃ¶lker",
      "email": "florian.voelker@antiloop.com"
    },
    {
      "name": "Patrick Ryser",
      "email": "patrick.ryser@cec.valantic.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Valantic\\ElasticaBridgeBundle\\": "src/"
    }
  },
  "extra": {
    "pimcore": {
      "bundles": [
        "Valantic\\ElasticaBridgeBundle\\ValanticElasticaBridgeBundle"
      ]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bin all update --ansi"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse src --memory-limit=1G"
    ],
    "phpcs": [
      "vendor/bin/php-cs-fixer fix --diff"
    ],
    "phpcs-check": [
      "vendor/bin/php-cs-fixer fix --diff --dry-run"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
