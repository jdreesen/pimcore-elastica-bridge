{
  "name": "valantic/pimcore-elastica-bridge",
  "version": "1.2.1",
  "description": "Elastica bridge for Pimcore",
  "type": "pimcore-bundle",
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "pimcore/pimcore": "^10.0",
    "ruflin/elastica": "^7.1"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8.2",
    "phpstan/extension-installer": "^1.2",
    "rector/rector": "^0.14.8",
    "phpstan/phpstan": "^1.10.10",
    "phpstan/phpstan-deprecation-rules": "^1.1.3",
    "roave/security-advisories": "dev-latest"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Linus Metzler",
      "email": "linus.metzler@cec.valantic.com"
    },
    {
      "name": "Florian VÃ¶lker",
      "email": "florian.voelker@antiloop.com"
    },
    {
      "name": "Patrick Ryser",
      "email": "patrick.ryser@cec.valantic.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Valantic\\ElasticaBridgeBundle\\": "src/"
    }
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bin all update --ansi",
      "@composer bin all bump",
      "@composer bump --dev-only"
    ],
    "phpstan": [
      "./vendor/bin/phpstan analyse --memory-limit=1G"
    ],
    "php-cs-fixer": [
      "./vendor-bin/phpcs/vendor/bin/php-cs-fixer fix --diff"
    ],
    "php-cs-fixer-check": [
      "./vendor-bin/phpcs/vendor/bin/php-cs-fixer fix --diff --dry-run"
    ],
    "rector": [
      "./vendor/bin/rector process src"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true,
      "ocramius/package-versions": true,
      "phpstan/extension-installer": true
    }
  }
}
